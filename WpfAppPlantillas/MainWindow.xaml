        <Style TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>

        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="botón 1">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="botón 2" Grid.Row="1"/>
        <Button Content="botón 3" Grid.Row="2"/>
    </Grid>
</Window>
