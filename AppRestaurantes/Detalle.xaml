<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMVVMColec.Detalle"
             Title="Detalle">
    <VerticalStackLayout>

        <VerticalStackLayout Spacing="10" Margin="10">
            <Image Source="{Binding ImgRes}" WidthRequest="300" HeightRequest="200">
                <Image.Clip>
                    <RoundRectangleGeometry CornerRadius="30" Rect="0,0,300,200"/>
                </Image.Clip>
            </Image>
            <Label Text="{Binding NombreRestaurante, StringFormat='{0}'}"/>
            <Label Text="{Binding Descripcion, StringFormat='{0}'}"/>
            <Label Text="{Binding Direccion, StringFormat='{0}'}"/>
            <Label Text="{Binding Poblacion, StringFormat='{0}'}"/>
            <Label Text="{Binding Provincia, String Format='{0}'}"/>
        </VerticalStackLayout>

    </VerticalStackLayout>
</ContentPage>