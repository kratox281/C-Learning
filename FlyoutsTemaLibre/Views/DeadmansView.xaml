<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlyoutsTemaLibre.Views.DeadmansView"
             xmlns:model ="clr-namespace:FlyoutsTemaLibre.Services"
             xmlns:vm="clr-namespace:FlyoutsTemaLibre.ViewModels"
             Title="DeadmansView">
    <VerticalStackLayout>
        <CollectionView ItemsSource="{Binding DeadMans}" SelectionMode="Single" SelectionChangedCommand="{Binding SelectionChanged}"
                       SelectedItem="{Binding CurrentDeadMan}">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:DeadMans">
                    <VerticalStackLayout Spacing="10" Margin="10">
                        <Image Source="{Binding ImagenDeadman}"/>
                        <Label Text="{Binding NombreDeadMan}"/>

                    </VerticalStackLayout>
                    
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>