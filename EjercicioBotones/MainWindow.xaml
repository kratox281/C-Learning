<Window x:Class="EjercicioBotones.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EjercicioBotones"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Width="62" Height="64" Click="Button_Click" Background="Transparent" Foreground="White">
            
            <ControlTemplate>
                <Grid>
                    <TextBlock>
                        TextBlock.Text
                    </TextBlock>
                    <Ellipse Fill="Green" Width="60" Height="60" >
           
                </Ellipse>
                    <Ellipse StrokeThickness="3" Stroke="White" Width="40" Height="40">
                    </Ellipse>
                </Grid>
            </ControlTemplate>
        </Button>
        
    </Grid>
</Window>
